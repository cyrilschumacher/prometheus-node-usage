{
  "name": "prometheus-node-usage",
  "version": "1.0.0",
  "main": "lib/index.js",
  "repository": "https://github.com/cyrilschumacher/prometheus-node-usage",
  "author": "Cyril Schumacher",
  "license": "MIT",
  "dependencies": {
    "pidusage": "^1.1.1"
  },
  "devDependencies": {
    "@types/chai": "^3.4.35",
    "@types/lodash": "^4.14.54",
    "@types/mocha": "^2.2.39",
    "@types/node": "^7.0.5",
    "@types/proxyquire": "^1.3.27",
    "chai": "^3.5.0",
    "cross-env": "^3.1.4",
    "mocha": "^3.2.0",
    "nyc": "^10.1.2",
    "proxyquire": "^1.7.11",
    "ts-node": "^2.1.0",
    "tslint": "^4.5.1",
    "typescript": "^2.2.1"
  },
  "scripts": {
    "build": "npm run build:lint && npm run build:typescript",
    "build:lint": "tslint src/**/*.ts",
    "build:typescript": "tsc",
    "clean": "rm -rf lib",
    "start": "node lib/index.js",
    "test": "cross-env NODE_ENV=test mocha --compilers ts:ts-node/register --recursive test",
    "test:coverage": "cross-env NODE_ENV=test nyc --require ts-node/register _mocha --compilers ts:ts-node/register --recursive test"
  },
  "nyc": {
    "instrument": true,
    "sourceMap": true,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "lib"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ]
  }
}
