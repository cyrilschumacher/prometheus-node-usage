{
    "compilerOptions": {
        "allowJs": false,
        "alwaysStrict": true,
        "baseUrl": "src",
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "outDir": "lib",
        "preserveConstEnums": true,
        "removeComments": true,
        "strictNullChecks": true,
        "lib": ["es5", "es2015.promise", "es6"],
        "typeRoots": ["node_modules/@types"]
    },
    "filesGlob": [
        "src/**/*.ts"
    ],
    "exclude": [
        "lib",
        "node_modules",
        "test"
    ]
}